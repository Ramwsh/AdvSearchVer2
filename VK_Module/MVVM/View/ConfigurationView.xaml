                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#333333"
                        LostFocus="OKApplicationKeyTextBoxLostFocus"
                        PreviewMouseLeftButtonDown="OKApplicationKeyTextBoxClick"
                        Text="Публичный ключ">
                    </TextBox>
                </Border>
            </StackPanel>


            <StackPanel
                Margin="0,5,0,0"
                Background="#E0E0E0"
                Orientation="Horizontal">
                <StackPanel.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="0"
                        Opacity="0.5"
                        ShadowDepth="3"
                        Color="#7038FF" />
                </StackPanel.Effect>
                <Border
                    Width="200"
                    Height="35"
                    Margin="590,0,0,0"
                    VerticalAlignment="Center"
                    Background="#B7A3FF"
                    BorderBrush="#583CB2"
                    BorderThickness="2"
                    CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Opacity="1"
                            ShadowDepth="3"
                            Color="Black" />
                    </Border.Effect>
                    <Button
                        Name="OKApplyButton"
                        Width="200"
                        Height="35"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        PreviewMouseDown="OKApplyButtonClick"
                        Style="{StaticResource CommandButton}">
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="Применить"
                            TextAlignment="Center">
                        </TextBlock>
                        <Button.Resources>
                            <Storyboard x:Key="ButtonClickAnimation">
                                <DoubleAnimation
                                    Storyboard.TargetName="OKApplyButton"
                                    Storyboard.TargetProperty="Opacity"
