                BorderBrush="#583CB2"
                BorderThickness="2"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="1"
                        ShadowDepth="3"
                        Color="Black" />
                </Border.Effect>
                <Grid>
                    <TextBlock
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Настройка для WhatsApp"
                        TextAlignment="Center">
                    </TextBlock>
                </Grid>
            </Border>

            <Border
                Width="275"
                Height="35"
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Background="#CCCCCC"
                BorderBrush="#333333"
                BorderThickness="2"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="1"
                        ShadowDepth="3"
                        Color="Black" />
                </Border.Effect>
                <TextBox
                    Name="WAApiTextBox"
                    Width="275"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#333333"
                    LostFocus="WAApiTextBoxLostFocus"
                    PreviewMouseLeftButtonDown="WAApiTextBoxClick"
                    Text="API токен WhatsApp">
                </TextBox>
            </Border>

            <Border
                Width="275"
                Height="35"
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Background="#CCCCCC"
                BorderBrush="#333333"
                BorderThickness="2"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="1"
                        ShadowDepth="3"
                        Color="Black" />
                </Border.Effect>
                <TextBox
                    Name="WAInstanceIDTextBox"
                    Width="275"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#333333"
                    LostFocus="WAInstanceIDTextBoxLostFocus"
                    PreviewMouseLeftButtonDown="WAInstanceIDTextBoxClick"
                    Text="ID инстанса Green API">
                </TextBox>
            </Border>
        </StackPanel>

        <StackPanel
            Margin="0,5,0,0"
            Background="#E0E0E0"
            Orientation="Horizontal">
            <StackPanel.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="0"
                    Opacity="0.5"
                    ShadowDepth="3"
                    Color="#7038FF" />
            </StackPanel.Effect>
            <Border
                Width="200"
                Height="35"
                Margin="590,0,0,0"
                VerticalAlignment="Center"
                Background="#B7A3FF"
                BorderBrush="#583CB2"
                BorderThickness="2"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="1"
                        ShadowDepth="3"
                        Color="Black" />
                </Border.Effect>
                <Button
                    Name="WAApplyButton"
                    Width="200"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    PreviewMouseDown="WAApplyButtonClick"
                    Style="{StaticResource CommandButton}">
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Применить"
                        TextAlignment="Center">
                    </TextBlock>
                    <Button.Resources>
                        <Storyboard x:Key="ButtonClickAnimation">
                            <DoubleAnimation
                                Storyboard.TargetName="WAApplyButton"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0.5"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                BeginTime="0:0:0.1"
                                Storyboard.TargetName="WAApplyButton"
                                Storyboard.TargetProperty="Opacity"
                                From="0.5"
                                To="1"
                                Duration="0:0:0.1" />
                        </Storyboard>
                    </Button.Resources>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard Storyboard="{StaticResource ButtonClickAnimation}" />
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </Border>
        </StackPanel>

        <StackPanel Margin="0,0,0,0">
            <StackPanel
                Margin="0,5,0,0"
                Background="#E0E0E0"
                Orientation="Horizontal">
                <StackPanel.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="0"
                        Opacity="0.5"
                        ShadowDepth="3"
                        Color="#7038FF" />
                </StackPanel.Effect>
                <Border
                    Width="200"
                    Height="35"
                    VerticalAlignment="Center"
                    Background="#B7A3FF"
                    BorderBrush="#583CB2"
                    BorderThickness="2"
                    CornerRadius="8">
                    <Grid>
                        <TextBlock
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="Настройка для Одноклассники"
                            TextAlignment="Center">
                        </TextBlock>
                    </Grid>
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Opacity="1"
                            ShadowDepth="3"
                            Color="Black" />
                    </Border.Effect>
                </Border>

                <Border
                    Width="585"
                    Height="35"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Background="#CCCCCC"
                    BorderBrush="#333333"
                    BorderThickness="2"
                    CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Opacity="1"
                            ShadowDepth="3"
                            Color="Black" />
                    </Border.Effect>
                    <TextBox
                        Name="OKAccesTokenTextBox"
                        Width="585"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#333333"
                        LostFocus="OKAccesTokenTextBoxLostFocus"
                        PreviewMouseDown="OKAccesTokenTextBoxClick"
                        Text="Токен приложения Одноклассники">
                    </TextBox>
                </Border>
            </StackPanel>

            <StackPanel
                Margin="0,5,0,0"
                Background="#E0E0E0"
                Orientation="Horizontal">
                <StackPanel.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="0"
                        Opacity="0.5"
                        ShadowDepth="3"
                        Color="#7038FF" />
                </StackPanel.Effect>
                <Border
                    Width="275"
                    Height="35"
                    Margin="515,0,0,0"
                    VerticalAlignment="Center"
                    Background="#CCCCCC"
                    BorderBrush="#333333"
                    BorderThickness="2"
                    CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Opacity="1"
                            ShadowDepth="3"
                            Color="Black" />
                    </Border.Effect>
                    <TextBox
