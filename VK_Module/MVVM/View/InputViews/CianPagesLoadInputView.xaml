<Window
    x:Class="VK_Module.MVVM.View.InputViews.CianPagesLoadInputView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VK_Module.MVVM.View.InputViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CianPagesLoadInputView"
    Width="385"
    Height="300"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Border
            Background="#F5F5F5"
            BorderBrush="#333333"
            BorderThickness="4"
            CornerRadius="20" />
        <StackPanel
            Width="360"
            Height="25"
            Margin="0,6,0,0"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <Ellipse
                Width="25"
                Height="25"
                Margin="335,0,0,0"
                PreviewMouseLeftButtonDown="CloseWindowClick">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Offset="1" Color="#00FF0000" />
                        <GradientStop Offset="0" Color="#FFFF0000" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="1"
                        ShadowDepth="3"
                        Color="DarkRed" />
                </Ellipse.Effect>
            </Ellipse>
        </StackPanel>

        <StackPanel
            Width="360"
            Height="25"
            Margin="10,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#E0E0E0"
            Orientation="Horizontal">
            <StackPanel.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="0"
                    Opacity="0.5"
                    ShadowDepth="3"
                    Color="#7038FF" />
            </StackPanel.Effect>
            <Border
                Width="100"
                Height="25"
                Margin="155,0,0,0"
                Background="#B7A3FF"
                BorderBrush="#583CB2"
                BorderThickness="2"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="1"
                        ShadowDepth="3"
                        Color="Black" />
                </Border.Effect>
                <Button
                    Name="AddGroup"
                    Width="100"
                    Height="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="AddGroupLinkButtonClick"
                    Style="{StaticResource CommandButton}">
                    <Button.Resources>
                        <Storyboard x:Key="ButtonClickAnimation">
                            <DoubleAnimation
                                Storyboard.TargetName="AddGroup"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0.5"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                BeginTime="0:0:0.1"
                                Storyboard.TargetName="AddGroup"
                                Storyboard.TargetProperty="Opacity"
                                From="0.5"
                                To="1"
                                Duration="0:0:0.1" />
                        </Storyboard>
                    </Button.Resources>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard Storyboard="{StaticResource ButtonClickAnimation}" />
                        </EventTrigger>
                    </Button.Triggers>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        FontWeight="Bold"
                        Text="Добавить"
                        TextAlignment="Center">
                    </TextBlock>
                </Button>
            </Border>

            <Border
                Width="100"
                Height="25"
                Margin="5,0,0,0"
                Background="#B7A3FF"
                BorderBrush="#583CB2"
                BorderThickness="2"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="1"
                        ShadowDepth="3"
                        Color="Black" />
                </Border.Effect>
                <Button
                    Name="RemoveGroup"
                    Width="100"
                    Height="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="RemoveGroupLinkButtonClick"
                    Style="{StaticResource CommandButton}">
                    <Button.Resources>
                        <Storyboard x:Key="ButtonClickAnimation">
                            <DoubleAnimation
                                Storyboard.TargetName="RemoveGroup"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0.5"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                BeginTime="0:0:0.1"
                                Storyboard.TargetName="RemoveGroup"
                                Storyboard.TargetProperty="Opacity"
                                From="0.5"
                                To="1"
                                Duration="0:0:0.1" />
                        </Storyboard>
                    </Button.Resources>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard Storyboard="{StaticResource ButtonClickAnimation}" />
                        </EventTrigger>
                    </Button.Triggers>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        FontWeight="Bold"
                        Text="Удалить"
                        TextAlignment="Center">
                    </TextBlock>
                </Button>
            </Border>
        </StackPanel>

        <StackPanel
            Margin="0,70,0,0"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <StackPanel.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="0"
                    Opacity="0.5"
                    ShadowDepth="3"
                    Color="#7038FF" />
            </StackPanel.Effect>
            <Border
                Width="360"
                Height="25"
                Background="#CCCCCC"
                BorderBrush="#333333"
                BorderThickness="2"
                CornerRadius="8">
                <TextBox
                    x:Name="GroupLink"
                    Width="360"
                    HorizontalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Foreground="#333333"
                    LostFocus="OnTargetGroupLostFocus"
                    PreviewMouseLeftButtonDown="OnTargetGroupLMClick"
                    Text="Ссылка на страницу ЦИАН с объявлениями"
                    TextAlignment="Center"
                    TextChanged="OnTargetGroupLinkChanged">
                </TextBox>
            </Border>
        </StackPanel>

        <StackPanel
            Width="350"
            Height="192"
            Margin="18,100,17,0"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <ListView
                Name="GroupLinksListView"
                Width="350"
                Height="192"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                Background="#CCCCCC"
                BorderBrush="#333333"
                BorderThickness="2"
                FontWeight="Bold"
                Foreground="#333333"
                ItemsSource="{Binding CianPages}"
                ScrollViewer.CanContentScroll="False"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                SelectionChanged="SelectGroupLinkClick">
                <ListView.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="0"
                        Opacity="0.5"
                        ShadowDepth="3"
                        Color="#7038FF" />
                </ListView.Effect>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="-3,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Width="320"
                                Background="#E0E0E0">
                                <StackPanel.Effect>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Direction="0"
                                        Opacity="0.5"
                                        ShadowDepth="3"
                                        Color="#7038FF" />
                                </StackPanel.Effect>
                                <TextBlock
                                    x:Name="CianLinkTextBox"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{Binding}">
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
